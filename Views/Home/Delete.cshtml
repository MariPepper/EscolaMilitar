@model EscolaMilitar.Models.Militares

@{
    int sessionId = ViewBag.SessionId;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apagar Inscritos</title>
</head>
<body>
    <br />
    <br />
    <h3>Tem a certeza que deseja apagar estas informações?</h3>
    <div>
        <h4>Apagar inscritos:</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Mec)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Mec)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apelido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apelido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Idade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Idade)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
        <div class="form-group">
            <button type="submit" formaction="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Info", "Home", new { tempId = sessionId })" class="btn btn-secondary">Cancelar</a> 
        </div>
        </form>
    </div>
    <script>
        window.history.replaceState(null, null, window.location.pathname);
    </script>
</body>
</html>
