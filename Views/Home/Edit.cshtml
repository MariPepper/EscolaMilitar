@model EscolaMilitar.Models.Militares

@{
    int sessionId = ViewBag.SessionId;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Dados</title>
</head>
<body>
    <br />
    <br />
    <h4>Editar dados:</h4>
<hr />
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
<div class="row">
    <div class="col-md-4">
            <form asp-action="Edit" onsubmit="return validateMec()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Mec" class="control-label"></label>
                    <input asp-for="Mec" class="form-control" />
                    <span asp-validation-for="Mec" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apelido" class="control-label"></label>
                    <input asp-for="Apelido" class="form-control" />
                    <span asp-validation-for="Apelido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Idade" class="control-label"></label>
                    <input asp-for="Idade" class="form-control" />
                    <span asp-validation-for="Idade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Editar</button>
                    <a href="@Url.Action("Info", "Home", new { tempId = sessionId })" class="btn btn-secondary">Cancelar</a> 
                </div>
            </form>
    </div>
</div>
    <script>
        window.history.replaceState(null, null, window.location.pathname);
    </script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
